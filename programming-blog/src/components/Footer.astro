---
import NewsletterForm from './NewsletterForm.astro';
---

<footer class="bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">
          Subscribe to Newsletter
        </h3>
        <NewsletterForm />
      </div>
      
      <div class="text-gray-600 dark:text-gray-300">
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">
          Connect
        </h3>
        <div class="flex gap-4">
          <a href="https://twitter.com/yourusername" class="hover:text-gray-800 dark:hover:text-white">
            Twitter
          </a>
          <a href="https://github.com/yourusername" class="hover:text-gray-800 dark:hover:text-white">
            GitHub
          </a>
          <a href="/rss.xml" class="hover:text-gray-800 dark:hover:text-white">
            RSS
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-gray-600 dark:text-gray-300">
      <p>&copy; {new Date().getFullYear()} Programming Blog. All rights reserved.</p>
    </div>
  </div>
</footer>